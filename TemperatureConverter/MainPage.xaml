<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureConverter.MainPage">
    <VerticalStackLayout Padding="10">
        <Entry x:Name="CelsiusEntry" Placeholder="Enter Celsius" />
        <Button Text="Convert to Fahrenheit" Clicked="OnConvertClicked" />
        <Label x:Name="ResultLabel" Text="Fahrenheit: " FontSize="18" />
    </VerticalStackLayout>
</ContentPage>